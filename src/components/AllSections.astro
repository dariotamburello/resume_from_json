---
const { cv } = Astro.props;
import Education from "@/components/Education.astro";
import Experience from "@/components/Experience.astro";
import Hero from "@/components/Hero.astro";
import Profile from "@/components/Profile.astro";
import Skills from "@/components/Skills.astro";
import Actions from "@/components/common/Actions.astro";
---

<main class="m-10 sm:mx-14 md:mx-20 lg:mx-24 md:mt-16 print:m-0">
  <div class="fixed top-0 right-0 no-print">
    <Actions />
  </div>
  <Hero cv={cv} />
  <Profile cv={cv} />
  <div class="flex flex-col print:grid lg:grid grid-cols-12 gap-2">
    <div class="col-span-6">
      <Experience cv={cv} />
    </div>
    <div class="col-span-6">
      <Education cv={cv} />
      <Skills cv={cv} />
    </div>
  </div>
</main>

<style>
  main {
    font-family: "SourceSerif", "Courier New", Courier, monospace;
    /* margin: 10%;
    margin-top: 5%; */
  }

  @media print {
    main {
      /* margin: 0 !important; */
    }
  }
</style>
