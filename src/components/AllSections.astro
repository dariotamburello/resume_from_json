---
const { cv } = Astro.props;
import Education from "@/components/Education.astro";
import Experience from "@/components/Experience.astro";
import Hero from "@/components/Hero.astro";
import Profile from "@/components/Profile.astro";
import Skills from "@/components/Skills.astro";
import Actions from "@/components/common/Actions.astro";
---

<main class="mx-auto max-w-5xl px-6 py-10 sm:px-10 md:px-16 lg:px-20 md:py-16 print:max-w-full print:p-0">
  <div class="fixed top-0 right-0 no-print">
    <Actions />
  </div>
  <Hero cv={cv} />
  <Profile cv={cv} />
  <div class="flex flex-col print:grid lg:grid grid-cols-12 gap-2">
    <div class="col-span-6">
      <Experience cv={cv} />
    </div>
    <div class="col-span-6">
      <Education cv={cv} />
      <Skills cv={cv} />
    </div>
  </div>
</main>

<style>
  main {
    font-family: "SourceSerif", "Courier New", Courier, monospace;
    /* margin: 10%;
    margin-top: 5%; */
  }

  @media print {
    main {
      /* margin: 0 !important; */
    }
  }
</style>
